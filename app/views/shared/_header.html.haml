%header.header
  .header__inner
    .header-upper
      %h1.header-upper__left
        = link_to root_path, class: "header-upper__left-link" do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3112359103", size: "134x36", alt: "mercari"
      %form.header-upper__right{action: '/'}
        %input.header-upper__search{type: "search", name: "keyword", placeholder: "キーワードから探す"}
    .header-lower
      %nav.header-lower__left
        %ul.header-search
          %li.header-search__list.header-search__list--first
            %h2.header-search__title
              = link_to root_path, class: "header-search__category" do
                カテゴリーから探す
          %li.header-search__list
            %h2.header-search__title
              = link_to root_path, class: "header-search__brand" do
                ブランドから探す
      .header-lower__right
        %ul.header-nav
          %li.header-nav__list
            %h2.header-nav__title
              = link_to root_path, class: "sp-header-user-icon" do
                %div マイページ
          %li.header-nav__list
            = link_to root_path, class: "pc-header-nav-root" do
              %span お知らせ
          %li.header-nav__list
            = link_to root_path, class: "pc-header-nav-root" do
              %span やることリスト
