%header.header
  .header__inner
    .header__upper.clearfix
      %h1.header__upper-left
        = link_to root_path, class: "header__upper-left-link" do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3112359103", size: "134x36", alt: "mercari"
      %form.header__upper-right{action: '/'}
        %input.header__upper-right-input{type: "search", name: "keyword", placeholder: "キーワードから探す"}
    .header__lower.clearfix
      %nav.header__lower-left
        %ul.header__lower-left-search
          %li
            %h2
              = link_to root_path, class: "header-nav-root" do
                カテゴリーから探す
          %li
            %h2
              = link_to root_path, class: "header-nav-root" do
                ブランドから探す
      .header__lower-right
        %ul.pc-header-user-nav
          %li
            %h2
              = link_to root_path, class: "sp-header-user-icon" do
                %div マイページ
          %li
            = link_to root_path, class: "pc-header-nav-root" do
              %span お知らせ
          %li
            = link_to root_path, class: "pc-header-nav-root" do
              %span やることリスト
